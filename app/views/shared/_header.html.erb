<header>
  <nav>
    <% if user_signed_in? %>
      <span>こんにちは、<%= current_user.nickname %>さん</span>
      <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout-button" %>
    <% else %>
      <%= link_to 'ログイン', new_user_session_path, class: "logout-button" %>
      <%= link_to '新規登録', new_user_registration_path, class: "logout-button" %>
    <% end %>
  </nav>
</header>